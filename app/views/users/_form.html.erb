
<%= form_for @user do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name, t(:user_form_name) %>
<%= f.text_field :name, class: 'form_control' %>

<%= f.label :email, t(:user_form_email) %>
<%= f.email_field :email, class: 'form_control' %>

<%= f.label :password, t(:user_form_password) %>
<%= f.password_field :password, class: 'form_control' %>

<%= f.label :password_confirmation, t(:user_form_password_confirmation) %>
<%= f.password_field :password_confirmation, class: 'form_control' %>
    
<%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>
