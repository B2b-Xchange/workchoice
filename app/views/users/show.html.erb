<% provide :title, @user.name %>
<div class="row">
  <%= render 'shared/avatar' %>
  <div class="col-md-8">
    <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
    <% end %>
  </div>
  
</div>


