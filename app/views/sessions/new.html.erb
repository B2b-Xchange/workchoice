<% provide :title, t(:session_title) %>
<h1 class="center"><%= t :session_h %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

    <%= f.label :email, t(:session_email) %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, t(:session_password) %>
    <%= link_to t(:session_password_forgot), new_password_reset_path %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span><%= t :session_remember %></span>
    <% end %>
    
    <%= f.submit t(:session_submit), class: "btn btn-primary" %>

    <% end %>

    <p><%= t :session_new_user %> <%= link_to t(:session_signup), signup_path %></p>
  </div>
</div>

