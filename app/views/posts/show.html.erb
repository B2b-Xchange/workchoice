<% provide :title, @post.title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="panel panel-primary" style="margin-top: 20px;">
      <div class="panel-heading">
        <h3><%= @post.title %></h3>
        <a href="#" style="color: orange;">contact</a>
      </div>
      <div class="pabel-body" style="padding: 10px;">
        <h4>Post type</h4>
        <p>
          <% if @post.content_type = 1 %>
          Project
          <% else %>
          Free resources
          <% end %>
        </p>
        <h4>Channel</h4>
        <p>
          <% if @post.channel = 1 %>
          Tax advisor
          <% end %>
        </p>
        <h4>Estimated work hours</h4>
        <p>
          <%= @post.scope_hours %>&nbsp;h
        </p>
        <h4>Remarks</h4>
        <p>
          <%= @post.remarks %>
        </p>
        <h4>Scope of work</h4>
        <p>
          <%= @post.scope_of_work %>
        </p>
        <h4>Scope of experience</h4>
        <p>
          <%= @post.scope_of_experience %>
        </p>
        <h4>Time frame</h4>
        <p>
          <%= @post.start_date %> - <%= @post.end_date %>
        </p>
        <h4>Hourly payment</h4>
        <p>
          <%= @post.hourly_payment %>
          <% if @post.currency = 1 %>
          EUR
          <% end %>
        </p>
        <h4>Document</h4>
        <p>
          <% if @post.document.length > 0 %>
          <%= @post.document %>
          <% else %>
          None
          <% end %>
        </p>
        <h4>Contact</h4>
        Follows
      </div>
    </div>
  </div>
</div>
